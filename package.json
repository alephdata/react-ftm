{
  "name": "@alephdata/vis2",
  "version": "1.0.1",
  "description": "Graph network visualisation tool for aleph/followthemoney ",
  "keywords": [],
  "author": "OCCRP Data <data@occrp.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/alephdata/vis2.js"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf public/dist/vis2.*",
    "build": "rollup -c rollup.config.ts",
    "build:docs": "typedoc --out docs --target es6 --excludeExternals  --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "serve": "npx serve -l 5005 ./public",
    "analyze": "rollup -c rollup.config.analyze.ts"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^10.14.4",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "coveralls": "^3.0.3",
    "jest": "^24.5.0",
    "jest-config": "^24.7.1",
    "rimraf": "^2.6.2",
    "rollup": "^1.9.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.2.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.20.1",
    "rollup-plugin-visualizer": "^1.1.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.2"
  },
  "dependencies": {
    "@alephdata/followthemoney": "^1.11.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-draggable": "^3.3.0"
  }
}
